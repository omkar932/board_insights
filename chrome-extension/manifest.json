{
  "manifest_version": 3,
  "name": "BoardInsight Analytics",
  "version": "1.1.0",
  "description": "Transformative educational analytics for Blackboard Learn.",
  "permissions": ["activeTab", "storage", "scripting", "alarms"],
  "host_permissions": ["*://*.blackboard.com/*", "*://*/webapps/gradebook/*", "http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.blackboard.com/*", "*://*/webapps/gradebook/*", "http://localhost:8000/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "wasm/*.wasm",
        "wasm/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
